<project name="Java 2 Html converter" default="run" basedir=".">
	<description>
		This build will convert java files into html files for the user's veiwing pleasure
	</description>

	<taskdef resource="net/sf/antcontrib/antlib.xml"/>

	<taskdef name="todo" classname="com.omo.tools.ant.TaskTagReportTask" />

	<!-- =================================================================== -->
	<!-- Initialize the Properties                                           -->
	<!-- =================================================================== -->
	<target name="init" description="initialize properties for build">
			<echo>Initializing properties here...</echo>
			<tstamp />
			<property environment="env"/>
			<!-- <echoproperties/> -->
	</target>

	<target name="run" depends="init" description="initialize properties for build">
		<echo>Generating java files into html files for viewing pages in an html format...</echo>
		<echo>not sure why I would ever want to do this but this may come in handy someday</echo>
		<todo outFile="TODO.html"
			applicationName="MOCIS"  
			repository="/repositories/reports/"  
			  branchOrTagName="JCCC_ITSD_2014_01_30"  
			  buildName="testweb_899_20141134"  
			  property="TODO_ITEMS"
			  verbose="true"
			  format="html"
			  dir="testfiles"
			  pattern="^:\s">
			<include name="**/*.java"/>
		</todo>
		<echo>${TODO_ITEMS}</echo>
	</target>

</project>
